@model IEnumerable<OnlineTicket.Models.Booking>

@{
    ViewData["Title"] = "User Bookings";
    var userName = ViewBag.UserName as string ?? "User";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="AdminUsers" asp-action="Index">Users</a></li>
            <li class="breadcrumb-item active">Bookings</li>
        </ol>
    </nav>

    <h1 class="mb-4"><i class="bi bi-ticket-perforated"></i> Bookings for @userName</h1>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Booking ID</th>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td><strong>#@booking.BookingId</strong></td>
                                <td>@booking.Event?.Title</td>
                                <td>@booking.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>$@booking.TotalAmount.ToString("N2")</td>
                                <td>
                                    @switch (booking.PaymentStatus)
                                    {
                                        case "Paid":
                                            <span class="badge bg-success">Paid</span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case "Refunded":
                                            <span class="badge bg-info">Refunded</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@booking.PaymentStatus</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No bookings found for this user</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="AdminUsers" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
    </div>
</div>
