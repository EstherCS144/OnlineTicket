@model List<dynamic>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-people"></i> User Management</h1>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Bookings</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.UserName</strong></td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role.Contains("Admin"))
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (user.Role.Contains("Organizer"))
                                {
                                    <span class="badge bg-primary">Organizer</span>
                                }
                                else if (user.Role.Contains("Customer"))
                                {
                                    <span class="badge bg-info">Customer</span>
                                }
                            </td>
                            <td>@user.BookingCount</td>
                            <td>
                                @if (user.IsLocked)
                                {
                                    <span class="badge bg-danger">Disabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("ViewBookings", "AdminUsers", new { id = user.Id })" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View Bookings
                                </a>
                                <form asp-action="ToggleStatus" asp-controller="AdminUsers" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm @(user.IsLocked ? "btn-success" : "btn-warning")" onclick="return confirm('@(user.IsLocked ? "Enable this user?" : "Disable this user?")')">
                                        <i class="bi bi-@(user.IsLocked ? "check-circle" : "x-circle")"></i> @(user.IsLocked ? "Enable" : "Disable")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
