@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats;
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-speedometer2"></i> Admin Dashboard
    </h1>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <h2 class="mb-0">@stats.TotalEvents</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Bookings</h5>
                    <h2 class="mb-0">@stats.TotalBookings</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Tickets Sold</h5>
                    <h2 class="mb-0">@stats.TotalTicketsSold</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h2 class="mb-0">$@stats.TotalRevenue.ToString("N2")</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
    </div>

    @if (stats.PendingApprovals > 0)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>@stats.PendingApprovals</strong> event(s) pending approval. <a asp-action="Events" class="alert-link">Review now</a>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-people-fill"></i> Organizer Management
                </div>
                <div class="card-body">
                    <p class="card-text">Approve, edit, or suspend event organizers.</p>
                    <a asp-action="Organizers" class="btn btn-primary">Manage Organizers</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-calendar-event"></i> Event Oversight
                </div>
                <div class="card-body">
                    <p class="card-text">View, approve, or cancel events on the platform.</p>
                    <a asp-action="Events" class="btn btn-success">Manage Events</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-ticket-perforated"></i> Ticket Management
                </div>
                <div class="card-body">
                    <p class="card-text">Monitor ticket sales and manage ticket types.</p>
                    <a asp-action="Tickets" class="btn btn-info">View Tickets</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-tag-fill"></i> Promotion Approval
                </div>
                <div class="card-body">
                    <p class="card-text">Approve or reject promotional codes and discounts.</p>
                    <a asp-action="Promotions" class="btn btn-warning">Manage Promotions</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-credit-card"></i> Booking & Payments
                </div>
                <div class="card-body">
                    <p class="card-text">Handle booking disputes and process refunds.</p>
                    <a asp-action="Bookings" class="btn btn-danger">View Bookings</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-bar-chart-fill"></i> Reports & Analytics
                </div>
                <div class="card-body">
                    <p class="card-text">Generate reports and view analytics.</p>
                    <a asp-action="Reports" class="btn btn-secondary">View Reports</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-gear-fill"></i> Platform Settings
                </div>
                <div class="card-body">
                    <p class="card-text">Configure system settings and security.</p>
                    <a asp-action="Settings" class="btn btn-dark">Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>
