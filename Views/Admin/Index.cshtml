@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats;
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-speedometer2"></i> Admin Dashboard
    </h1>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <h2 class="mb-0">@stats.TotalEvents</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Bookings</h5>
                    <h2 class="mb-0">@stats.TotalBookings</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Tickets Sold</h5>
                    <h2 class="mb-0">@stats.TotalTicketsSold</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h2 class="mb-0">$@stats.TotalRevenue.ToString("N2")</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
    </div>

    @if (stats.PendingApprovals > 0)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>@stats.PendingApprovals</strong> event(s) pending approval. <a asp-action="Events" class="alert-link">Review now</a>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-people-fill"></i> User Management
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage customers and organizers. Enable/disable accounts and check bookings per user.</p>
                    <a asp-controller="AdminUsers" asp-action="Index" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-calendar-event"></i> Event Management
                </div>
                <div class="card-body">
                    <p class="card-text">Create, edit, delete, and manage events. Activate or deactivate events.</p>
                    <a asp-controller="AdminEvents" asp-action="List" class="btn btn-success">Manage Events</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-geo-alt"></i> Venue Management
                </div>
                <div class="card-body">
                    <p class="card-text">Create, edit, and delete event venues.</p>
                    <a asp-controller="AdminVenues" asp-action="List" class="btn btn-info">Manage Venues</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-bar-chart-fill"></i> Reports & Analytics
                </div>
                <div class="card-body">
                    <p class="card-text">View reports including total tickets sold per event, total revenue per event and month, and active users.</p>
                    <a asp-action="Reports" class="btn btn-secondary">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>
