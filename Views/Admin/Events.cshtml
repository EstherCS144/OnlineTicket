@model IEnumerable<OnlineTicket.Models.Admin.EventDto>

@{
    ViewData["Title"] = "Manage Events";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Events</li>
        </ol>
    </nav>

    <h1 class="mb-4">
        <i class="bi bi-calendar-event"></i> Event Oversight
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">All Events</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Venue</th>
                                <th>Start Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model)
                            {
                                <tr>
                                    <td>@evt.Title</td>
                                    <td>@evt.Category</td>
                                    <td>@evt.Venue</td>
                                    <td>@evt.EventDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (evt.Status)
                                        {
                                            case "Active":
                                                <span class="badge bg-success">Active</span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-secondary">Rejected</span>
                                                break;
                                            default:
                                                <span class="badge bg-info">@evt.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (evt.Status == "Pending")
                                        {
                                            <form asp-action="ApproveEvent" method="post" class="d-inline">
                                                <input type="hidden" name="eventId" value="@evt.EventId" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-check-circle"></i> Approve
                                                </button>
                                            </form>
                                            <form asp-action="RejectEvent" method="post" class="d-inline">
                                                <input type="hidden" name="eventId" value="@evt.EventId" />
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No events found.</p>
            }
        </div>
    </div>
</div>
