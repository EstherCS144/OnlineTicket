@model IEnumerable<OnlineTicket.Models.Admin.BookingDto>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Bookings</li>
        </ol>
    </nav>

    <h1 class="mb-4">
        <i class="bi bi-credit-card"></i> Booking & Payment Monitoring
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">All Bookings</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Customer</th>
                                <th>Event</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Payment Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td><strong>#@booking.BookingId</strong></td>
                                    <td>@booking.CustomerName</td>
                                    <td>@booking.EventTitle</td>
                                    <td>@booking.BookingDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@booking.TicketCount</td>
                                    <td>$@booking.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @switch (booking.PaymentStatus)
                                        {
                                            case "Paid":
                                                <span class="badge bg-success">Paid</span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case "Refunded":
                                                <span class="badge bg-info">Refunded</span>
                                                break;
                                            case "Failed":
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@booking.PaymentStatus</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (booking.PaymentStatus == "Paid")
                                        {
                                            <form asp-action="ProcessRefund" method="post" class="d-inline">
                                                <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Are you sure you want to process a refund for this booking?')">
                                                    <i class="bi bi-cash-stack"></i> Refund
                                                </button>
                                            </form>
                                        }
                                        <small class="text-muted d-block">
                                            Payment: @booking.PaymentProvider
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No bookings found.</p>
            }
        </div>
    </div>
</div>
