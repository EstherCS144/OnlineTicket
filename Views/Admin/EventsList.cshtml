@model IEnumerable<OnlineTicket.Models.Event>

@{
    ViewData["Title"] = "Manage Events";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-event"></i> Event Management</h1>
        <a href="@Url.Action("Create", "AdminEvents")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Event
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Venue</th>
                        <th>Date</th>
                        <th>Organizer</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model)
                    {
                        <tr>
                            <td><strong>@evt.Title</strong></td>
                            <td>@evt.Category?.Name</td>
                            <td>@evt.Venue?.Name</td>
                            <td>@evt.EventDate.ToString("MMM dd, yyyy")</td>
                            <td>@evt.Organizer?.UserName</td>
                            <td>
                                @if (evt.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@evt.Status</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "AdminEvents", new { id = evt.EventId })" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-controller="AdminEvents" asp-route-id="@evt.EventId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this event?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
